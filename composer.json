{
	"name": "kalnoy/nestedset-app",
	"description": "The Nested Set app demo",
	"keywords": ["nested sets", "laravel", "database"],
	"license": "MIT",

	"require": {
		"laravel/framework": "~4.2.0",
"illuminate3/lingos": "dev-master",
"illuminate3/bootawesome": "dev-master",
"chumper/datatable": "2.*",
"kalnoy/nestedset": "~2.0@beta",
"erusev/parsedown": "~0.9.3"
	},

	"require-dev": {
		"barryvdh/laravel-debugbar": "1.*",
		"barryvdh/laravel-ide-helper": "1.*",
"dollar/generators": "dev-master",
		"mockery/mockery": "~0.9",
		"phpunit/phpunit": "~4.0"
	},

	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php",
            "app/lib"
		],

		"psr-0": {
			"Kalnoy": "app/lib"
		},

        "files": [
            "app/helpers.php"
        ]
	},

	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],

		"pre-update-cmd": [
			"php artisan clear-compiled"
		],

		"post-update-cmd": [
			"php artisan optimize"
		],

		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},

	"config": {
		"preferred-install": "dist"
	}
}
